{
    "extends": [
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "rules": {
            "object-literal-sort-keys": false,
            "interface-name": [
                true,
                "never-prefix"
            ],
            "member-access": [
                true,
                "no-public"
            ],
            "ordered-imports": false
        },
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    }
}
